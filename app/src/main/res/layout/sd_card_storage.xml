<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d4dce6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_home_case"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:src="@drawable/folder_internal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/direction_folder"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_pathHolder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Carte SD"
            android:fontFamily="@font/gothic_bold"
            android:textColor="#ff9a0d"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textFontWeight="@integer/material_motion_duration_medium_2"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_sdCard_storage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_bar"
        android:gravity="center_vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/linearRenommer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/rename"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ff9a0d"
                android:text="Rénommer"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:src="@drawable/details"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ff9a0d"
                android:text="Détails"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPartager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ff9a0d"
                android:text="Partager"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSupprimer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ff9a0d"
                android:text="Supprimer"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>