<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#252525"
    tools:context=".fragment.Recents_files">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_recents_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/linearRenommer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_bottom_items">

            <ImageView
                android:src="@drawable/rename"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Rénommer"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/details"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Détails"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPartager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Partager"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSupprimer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Supprimer"
                android:textFontWeight="@integer/material_motion_duration_short_1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>