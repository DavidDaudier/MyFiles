<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_splash_screen"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/myFile_icone"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/main_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/bg_botom_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFile_icone"
        app:layout_constraintVertical_bias="0.13"
        tools:layout_editor_absoluteX="20dp"
        android:orientation="vertical"
        android:outlineSpotShadowColor="#3b496c">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic_bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Gérez vos fichiers avec l'application \nMy Files"
            android:textColor="#3b496c"
            android:textSize="25sp"
            />

        <View
            android:layout_width="70dp"
            android:layout_height="7dp"
            android:background="@drawable/bg_trace"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

        </View>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic_regular"
            android:gravity="center"
            android:text="Un moyen facile de gérer votre fichier, \nvidéo, image, doc, PDF, etc."
            android:textColor="#aaabb0"
            android:textSize="17sp"
            />
    </LinearLayout>






